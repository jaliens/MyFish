<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/flipCard1">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:layout_margin="13dp"
            android:id="@+id/no1"
            android:src="@drawable/no"
            android:visibility="invisible"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:layout_margin="13dp"
            android:id="@+id/yes1"
            android:src="@drawable/yes"
            android:visibility="invisible"/>
        <FrameLayout
            android:id="@+id/card_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/card_back" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/card_front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center">
            <include layout="@layout/card_front" />
        </FrameLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="담기"
            android:layout_gravity="bottom|center"
            android:id="@+id/put1"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="right"
        android:id="@+id/flipCard2">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:layout_margin="13dp"
            android:id="@+id/no2"
            android:src="@drawable/no"
            android:visibility="invisible"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:layout_margin="13dp"
            android:id="@+id/yes2"
            android:src="@drawable/yes"
            android:visibility="invisible"/>
        <FrameLayout
            android:id="@+id/card_back1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/card_back1" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/card_front1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center">
            <include layout="@layout/card_front1" />
        </FrameLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="담기"
            android:layout_gravity="bottom|center"
            android:id="@+id/put2"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:text="어장에 담은사람들"
        android:layout_gravity="bottom"
        android:layout_marginBottom="120dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test2"
        android:text="역대 담은사람들"
        android:layout_gravity="bottom"
        android:layout_marginBottom="200dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인하기"
        android:layout_gravity="bottom|center"
        android:layout_margin="30dp"
        android:id="@+id/open"/>
</FrameLayout>